pipeline {
    agent any

    environment {
        TERRAFORM_PATH = "C:/terraform_1.11.3_windows_386/terraform.exe"
        ANSIBLE_PLAYBOOK = "C:/ProgramData/Jenkins/.jenkins/workspace/chat/ansible/playbook.yml"
        EC2_KEY_PATH = "C:/ProgramData/Jenkins/.jenkins/workspace/chat/chat-app-key.pem"
    }

    stages {
        stage('Checkout Code') {
            steps {
                script {
                    echo "Cloning repository..."
                }
                git branch: 'main', credentialsId: 'github-credentials', url: 'https://github.com/your-repo/chat-app.git'
            }
        }

        stage('Provision EC2 Instance') {
            steps {
                script {
                    echo "Running Terraform to provision EC2..."
                }

                dir('terraform') {
                    withCredentials([
                        string(credentialsId: 'aws-access-key', variable: 'AWS_ACCESS_KEY_ID'),
                        string(credentialsId: 'aws-secret-key', variable: 'AWS_SECRET_ACCESS_KEY')
                    ]) {
                        bat "${TERRAFORM_PATH} init"
                        bat "${TERRAFORM_PATH} apply -auto-approve"

                        script {
                            env.EC2_PUBLIC_IP = bat(script: "${TERRAFORM_PATH} output -raw instance_public_ip", returnStdout: true).trim()
                            echo "EC2 Public IP: ${env.EC2_PUBLIC_IP}"
                        }
                    }
                }
            }
        }

        stage('Configure EC2 with Ansible') {
            steps {
                script {
                    echo "Installing Docker and setting up environment on EC2..."
                }

                bat """
                    ansible-playbook -i ${EC2_PUBLIC_IP}, -u Administrator --private-key ${EC2_KEY_PATH} ${ANSIBLE_PLAYBOOK}
                """
            }
        }

        stage('Deploy Containers') {
            steps {
                script {
                    echo "Deploying backend and frontend containers..."
                }

                bat """
                    ssh -i ${EC2_KEY_PATH} Administrator@${EC2_PUBLIC_IP} "docker-compose -f C:\\Users\\Administrator\\docker-compose.yml up -d"
                """
            }
        }
    }

    post {
        success {
            echo "Deployment successful!"
        }
        failure {
            echo "Deployment failed!"
        }
    }
}
